<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
    <h1>Add a review for <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
